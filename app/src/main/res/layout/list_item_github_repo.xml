<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:background="#ccc">

		<android.support.v7.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_margin="5dp"
				android:focusable="true"
				android:clickable="true">

				<RelativeLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:layout_centerInParent="true"
						android:background="#FFF"
						android:padding="5dp">

						<View
								android:id="@+id/card_color_light"
								android:background="@color/materialStyleLight"
								android:layout_width="3dp"
								android:layout_height="18dp"
								android:layout_marginTop="5dp"/>

						<View
								android:id="@+id/card_color_dark"
								android:background="@color/materialStyleLighter"
								android:layout_width="3dp"
								android:layout_height="18dp"
								android:layout_below="@id/card_color_light"/>

						<android.support.v7.widget.CardView
								android:id="@+id/card"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_gravity="center"
								android:background="#232323"
								android:layout_margin="5dp">

								<ImageView
										android:id="@+id/follower_icon"
										android:layout_width="36dp"
										android:layout_height="36dp"
										android:background="@color/cardview_dark_background"/>
						</android.support.v7.widget.CardView>

						<RelativeLayout
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_toRightOf="@id/card"
								android:layout_marginTop="5dp"
								android:orientation="horizontal">

								<TextView
										android:id="@+id/text_login_name"
										android:layout_width="match_parent"
										android:layout_height="wrap_content"
										android:layout_alignParentStart="true"
										android:layout_marginLeft="10dp"
										android:textSize="14sp"
										android:textStyle="bold"
										tools:text="Flap Jacks"/>
						</RelativeLayout>

				</RelativeLayout>

		</android.support.v7.widget.CardView>
</LinearLayout>